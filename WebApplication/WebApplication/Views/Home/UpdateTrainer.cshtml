@model Models.Trainer

<h1>Az edző információinak megváltoztatása</h1>
<a href="/Home/Index">Vissza a főoldalra</a>
<br />
<a href="/Home/GetTrainer?trainerId=@Model.TrainerID">Vissza az edzőnkhöz</a>
