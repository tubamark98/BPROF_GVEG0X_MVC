@model Models.Trainer

<nav class="nav justify-content-center">
    <a class="btn btn-outline-primary" href="/Home/Index">Vissza a főoldalra</a>
    <a class="btn btn-outline-success" href="/Home/ListTrainer">>Vissza az edzőkhöz</a>
    <a class="btn btn-outline-dark" href="/Home/CreateClient?trainerId=@Model.TrainerID">Adjon hozzá az edzőhöz egy új Klienst</a>
</nav>

<h1>@Model.TrainerName Kliensei</h1>

<br />
@foreach (var item in Model.GymClients)
{
    <h4>@item.ToString()</h4>

    @foreach (var extra in item.ExtraInfos)
    {
        <h6>@extra.Information</h6>
        <br />
        <a class="btn btn-outline-danger" href="/Home/DeleteInfo?infoId=@extra.InfoId"> Torolje az ExtraInfo-t</a>
        <a class="btn btn-outline-success" href="/Home/UpdateInfo?infoId=@extra.InfoId"> Updatelje az ExtraInfo-t</a>

    }
    <br />
    <a class="functionbutton" href="/Home/CreateInfo?clientId=@item.GymID">Adjon hozza egy ExtraInfo-t</a>
    <br />
    <a class="btn btn-outline-success" href="/Home/UpdateClient?clientId=@item.GymID">UpdateClient</a>
    <a class="btn btn-outline-danger" href="/Home/DeleteClient?clientId=@item.GymID">TőrlésClient</a>
}
